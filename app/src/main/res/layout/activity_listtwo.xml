<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <EditText
        android:id="@+id/inputCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="手动添加条形码"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inputButton"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:text="添加"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="@+id/inputCode"
        app:layout_constraintLeft_toRightOf="@+id/inputCode"
        app:layout_constraintTop_toTopOf="@+id/inputCode" />

    <Button
        android:background="@drawable/shape"
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="清空"
        app:layout_constraintBottom_toBottomOf="@+id/submit"
        app:layout_constraintLeft_toRightOf="@+id/submit"
        app:layout_constraintTop_toTopOf="@+id/submit" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="确定"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="420dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCode">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/发货订单"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cDLCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/发货日期"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/ddate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/客户名称"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cCusName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/仓库"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cWhName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/存货编码"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cSOCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/存货名称"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cInvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/规格型号"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cInvStd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/产品要求码"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cFree1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/发货数量"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/inum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="4"
                android:gravity="left"
                android:text="@string/备注"
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>

            <TextView
                android:id="@+id/cmemo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dip"></TextView>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>